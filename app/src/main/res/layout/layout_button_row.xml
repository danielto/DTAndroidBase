<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/btnRow"
  android:layout_width="match_parent"
  android:layout_height="@dimen/settings_row_height"
  android:paddingLeft="@dimen/margin_huge"
  android:background="?attr/selectableItemBackground"
  >

  <android.support.v7.widget.AppCompatImageView
    android:id="@+id/ivBtnIcon"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_centerVertical="true"
    app:srcCompat="@drawable/ic_settings_grey"
    />

  <TextView
    android:id="@+id/tvBtnText"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/margin_huge"
    android:textSize="16sp"
    android:textStyle="normal"
    android:textColor="#de000000"
    android:layout_centerVertical="true"
    android:fontFamily="sans-serif"
    android:lineSpacingExtra="8sp"
    android:layout_toRightOf="@id/ivBtnIcon"
    tools:text="@string/ac_settings"
    />


</RelativeLayout>